<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/scrollview_register"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_profile"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="85dp"
                android:layout_marginBottom="18dp"
                android:layout_marginStart="148dp"
                android:src="@mipmap/ic_launcher"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_background"
                android:clipToOutline="true"
                />
            <TextView
                android:id="@+id/txt_choose_image"
                android:textColor="#071777"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="31dp"
                android:layout_marginStart="167dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Chọn ảnh"
                />
            <LinearLayout
                android:id="@+id/layout_student_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:layout_marginHorizontal="41dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_student_name_label"
                    android:textColor="#ABA5A5"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Tên sinh viên"
                    />
                <EditText
                    android:id="@+id/input_student_name"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="#FFFFFF"
                    android:layout_marginHorizontal="3dp"
                    android:padding="8dp"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:textColorHint="#ABA5A5"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_student_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:layout_marginHorizontal="41dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_student_id_label"
                    android:textColor="#ABA5A5"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Mã sinh viên"
                    />
                <EditText
                    android:id="@+id/input_student_id"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="#FFFFFF"
                    android:layout_marginHorizontal="3dp"
                    android:padding="8dp"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:textColorHint="#ABA5A5"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_class"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:layout_marginHorizontal="41dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_class_label"
                    android:textColor="#ABA5A5"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Lớp"
                    />
                <EditText
                    android:id="@+id/input_class"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="#FFFFFF"
                    android:layout_marginHorizontal="3dp"
                    android:padding="8dp"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:textColorHint="#ABA5A5"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="44dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_phone_label"
                    android:textColor="#ABA5A5"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Số điện thoại"
                    />
                <EditText
                    android:id="@+id/input_phone"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="#FFFFFF"
                    android:layout_marginHorizontal="3dp"
                    android:padding="8dp"
                    android:inputType="phone"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:textColorHint="#ABA5A5"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/btn_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/cr10b071777"
        android:paddingVertical="18dp"
        android:paddingHorizontal="77dp"
        android:layout_marginVertical="16dp"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">
        <Button
            android:id="@+id/txt_continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiếp tục"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@android:color/transparent"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:padding="0dp"/>
    </LinearLayout>
</LinearLayout>
