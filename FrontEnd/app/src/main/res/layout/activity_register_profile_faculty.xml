<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    tools:context=".view.RegisterProfileFacultyActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header Image - Reusing from activity_register -->
        <ImageView
            android:id="@+id/iv_university"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/university_building"
            app:layout_constraintDimensionRatio="6:3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Curved Overlay - Reusing from activity_register -->
        <View
            android:id="@+id/curved_overlay"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/curved_overlay"
            app:layout_constraintBottom_toBottomOf="@id/iv_university"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Content Container -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_form_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-40dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_university">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/form_background"
                android:orientation="vertical"
                android:padding="40dp"
                android:paddingTop="50dp">

                <!-- Title -->
                <TextView
                    android:id="@+id/tv_title_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Thông tin Giảng viên"
                    android:textColor="@android:color/white"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <!-- Subtitle -->
                <TextView
                    android:id="@+id/tv_subtitle_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="40dp"
                    android:alpha="0.9"
                    android:text="Vui lòng nhập thông tin hồ sơ của bạn"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <!-- Faculty Name Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txt_faculty_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:theme="@style/WhiteTextInputLayoutTheme"
                    app:boxBackgroundColor="@android:color/white"
                    app:boxBackgroundMode="filled"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    app:startIconDrawable="@drawable/ic_person"
                    app:startIconTint="@color/gray_600">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_faculty_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Tên giảng viên"
                        android:inputType="textPersonName"
                        android:padding="18dp"
                        android:textColor="@color/gray_800"
                        android:textColorHint="@color/gray_500"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Department Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txt_department"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:theme="@style/WhiteTextInputLayoutTheme"
                    app:boxBackgroundColor="@android:color/white"
                    app:boxBackgroundMode="filled"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    app:startIconDrawable="@drawable/ic_building"
                    app:startIconTint="@color/gray_600">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_department"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Mã bộ môn"
                        android:inputType="text"
                        android:padding="18dp"
                        android:textColor="@color/gray_800"
                        android:textColorHint="@color/gray_500"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Degree Input (Hoc vi) -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txt_degree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:theme="@style/WhiteTextInputLayoutTheme"
                    app:boxBackgroundColor="@android:color/white"
                    app:boxBackgroundMode="filled"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    app:startIconDrawable="@drawable/ic_education"
                    app:startIconTint="@color/gray_600">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_degree"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Học vị"
                        android:inputType="text"
                        android:padding="18dp"
                        android:textColor="@color/gray_800"
                        android:textColorHint="@color/gray_500"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Phone Number Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txt_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:theme="@style/WhiteTextInputLayoutTheme"
                    app:boxBackgroundColor="@android:color/white"
                    app:boxBackgroundMode="filled"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    app:startIconDrawable="@drawable/ic_phone"
                    app:startIconTint="@color/gray_600">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_phone_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Số điện thoại"
                        android:inputType="phone"
                        android:padding="18dp"
                        android:textColor="@color/gray_800"
                        android:textColorHint="@color/gray_500"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Office Room Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txt_office_room"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp"
                    android:theme="@style/WhiteTextInputLayoutTheme"
                    app:boxBackgroundColor="@android:color/white"
                    app:boxBackgroundMode="filled"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    app:startIconDrawable="@drawable/ic_location"
                    app:startIconTint="@color/gray_600">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_office_room"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Phòng làm việc"
                        android:inputType="text"
                        android:padding="18dp"
                        android:textColor="@color/gray_800"
                        android:textColorHint="@color/gray_500"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Register Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_register_profile"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/blue_700"
                    android:fontFamily="sans-serif-medium"
                    android:text="ĐĂNG KÝ"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:cornerRadius="16dp"
                    app:elevation="0dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout> 